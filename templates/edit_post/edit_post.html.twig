{% extends 'parent.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/edit_post.css') }}" type="text/css">
{% endblock %}

{% block content %}
    <div class="container">
        <h1>Modifier le Post</h1>
        <form action="{{ path('update_post', {'photoId': photo.id}) }}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="photo">Photo :</label>
                <input type="file" id="photo" name="photo" accept="image/*">
            </div>
            <div class="form-group">
                <label for="description">Description :</label>
                <textarea id="description" name="description" rows="4">{{ photo.description }}</textarea>

            </div>
            <button type="submit" class="button-save">Enregistrer les modifications</button>
            <a href="/" class="button-cancel">Annuler</a>
        </form>
    </div>
{% endblock %}

