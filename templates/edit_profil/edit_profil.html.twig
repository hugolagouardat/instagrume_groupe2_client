{% extends 'parent.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/edit_profil.css') }}" type="text/css">
{% endblock %}

{% block content %}
	<div class="container">
		<h1>Modifier le Profil</h1>
		<form action="{{ path('update_profil', {'userId': user.id}) }}" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="avatar">Avatar :</label>
				<input type="file" id="avatar" name="avatar" accept="image/*">
			</div>
			<div class="form-group">
				<label for="description">Description :</label>
				<textarea id="description" name="description" rows="2">{{ user.description }}</textarea>
			</div>
			<div class="form-group">
				<label for="password">Nouveau mot de passe :</label>
				<input type="password" id="password" name="password">
			</div>
			<div class="form-group">
				<label for="confirm_password">Confirmer le mot de passe :</label>
				<input type="password" id="confirm_password" name="confirm_password">
			</div>
			{% if error is defined %}
				<a style="color:red; display:flex; justify-content:center; margin-bottom:10px;">
					{{ error }}
				</a>
			{% endif %}
			<button type="submit" class="button-save">Enregistrer les modifications</button>
			<a href="/profil" class="button-cancel">Annuler</a>
		</form>
	</div>
{% endblock %}
